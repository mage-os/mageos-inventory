<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::stores">
                        <resource id="Magento_InventoryApi::inventory">
                            <resource id="Magento_InventoryApi::stock">
                                <resource id="Magento_InventoryLowQuantityNotificationApi::low_quantity_notification"
                                          title="Low Quantity Notification"
                                          translate="title"
                                          sortOrder="20">
                                    <resource id="Magento_InventoryLowQuantityNotificationApi::stock_create_low_quantity_notification"
                                              title="Create low quantity notification"
                                              translate="title"
                                              sortOrder="30"/>
                                    <resource id="Magento_InventoryLowQuantityNotificationApi::stock_delete_low_quantity_notification"
                                              title="Remove low quantity notification"
                                              translate="title"
                                              sortOrder="40"/>
                                </resource>
                            </resource>
                        </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
